<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/side_nav_bar"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:theme="@style/AppTheme">

    <Space
        android:layout_width="match_parent"
        android:id="@+id/nav_header_space_1"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <activitytest.example.lenovo.handwriting.operation.view.RoundImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewAppMainCognitoIcon"
        android:src="@drawable/head"
        android:scaleType="fitXY"
        app:type="circle"
        android:layout_below="@+id/nav_header_space_1"
        android:layout_toEndOf="@+id/space11"
        android:layout_toRightOf="@+id/space11"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/nav_header_space_2"
        android:layout_below="@+id/nav_header_space_1"
        android:layout_toEndOf="@+id/imageViewAppMainCognitoIcon"
        android:layout_toRightOf="@+id/imageViewAppMainCognitoIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_main_screen_title"
        android:textColor="@color/toolbar_items"
        android:id="@+id/textViewNavMain"
        android:layout_centerVertical="true"
        android:layout_below="@+id/nav_header_space_2"
        android:layout_toEndOf="@+id/imageViewAppMainCognitoIcon"
        android:paddingLeft="@dimen/activity_text_padding"
        android:layout_toRightOf="@+id/imageViewAppMainCognitoIcon"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:id="@+id/space11"
        android:layout_below="@+id/nav_header_space_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>