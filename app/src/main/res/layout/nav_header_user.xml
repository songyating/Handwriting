<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@drawable/side_nav_bar"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:theme="@style/AppTheme">

    <Space
        android:id="@+id/nav_header_space_1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <activitytest.example.lenovo.handwriting.operation.view.RoundImageView
        android:id="@+id/imageViewAppMainCognitoIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/nav_header_space_1"
        android:layout_toEndOf="@+id/space11"
        android:layout_toRightOf="@+id/space11"
        android:scaleType="fitXY"
        android:src="@drawable/head"
        app:type="circle"/>

    <Space
        android:id="@+id/nav_header_space_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/nav_header_space_1"
        android:layout_toEndOf="@+id/imageViewAppMainCognitoIcon"
        android:layout_toRightOf="@+id/imageViewAppMainCognitoIcon"/>

    <TextView
        android:id="@+id/textViewNavUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_space_2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageViewAppMainCognitoIcon"
        android:layout_toRightOf="@+id/imageViewAppMainCognitoIcon"
        android:paddingLeft="@dimen/activity_text_padding"
        android:text="Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/toolbar_items"/>

    <TextView
        android:id="@+id/textViewNavUserSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNavUser"
        android:layout_alignStart="@+id/textViewNavUser"
        android:layout_below="@+id/textViewNavUser"
        android:paddingLeft="@dimen/activity_text_padding"
        android:text="User"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/toolbar_items"/>

    <Space
        android:id="@+id/space11"
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nav_header_space_1"/>

</RelativeLayout>